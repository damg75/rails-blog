<%= form_with(model: article, local: true) do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>

    <div>
        <%= form.label :content %>
        <%= form.rich_text_area :content %>
    </div>
    
    <div>
        <%= form.label :Categories %>
        <%= form.collection_check_boxes(:category_ids, Category.all, :id, :title) %>
    </div>

    <div>
        <%= form.submit 'Enviar' %>
    </div>

<% end %>